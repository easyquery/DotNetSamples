@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["MenuTitle"] = "Menu";

    const string defaultUserEmail = "demo@korzh.com";
    const string defaultUserPassword = "demo";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" value="@defaultUserEmail" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" value="@defaultUserPassword" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <!--
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                        -->
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Demo account</h4>
                <hr />
                <div>
                    <p>
                        Some pages of our demo application require an authorization.
                        We did that by purpose - to demonstrate how EasyQuery works in the systems with access control.
                    <p>
                        To login you might use the default user with the following credentials:
                    </p>
                    <p>
                        login: <strong>demo@korzh.com</strong>
                        <br />
                        password: <strong>demo</strong>
                    </p>
                    <p>
                        or you can <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">register as a new account</a> and unleash all possibilities of this demo.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
