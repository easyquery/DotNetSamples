        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Margin="5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0" Margin="0" Background="#FF7BC4F8"/>
            <Border Grid.Row="1" BorderBrush="#FF7BC4F8" BorderThickness="0,0,0,1" Margin="0"  Background="White">
                <TextBlock x:Name="EntitiesAndAttributes" FontWeight="Bold" Text="Entities and Attributes" FontSize="24" FontFamily="Segoe UI Light" Foreground="#FF4F4F4F" Margin="15,2,15,0"/>
            </Border>
            <Border Grid.Row="2" BorderBrush="#FF7BC4F8" BorderThickness="0,0,0,1" Margin="0"  Background="White" Padding="4">
                <DockPanel Background="AntiqueWhite" LastChildFill="True">
                    <TextBlock Text="Filter:" Margin="5"  DockPanel.Dock="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="textBoxEntityFilter" Width="Auto"/>
                </DockPanel >

            </Border>
            <Border Grid.Row="3" VerticalAlignment="Stretch" BorderThickness="1,0,1,1" BorderBrush="#FFC4D6E5" Background="White">
                <eqcontols:EntitiesPanel Query="{Binding Query}" x:Name="entitiesPanel" />
            </Border>
        </Grid>

        <Grid Margin="5" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="44"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0" Margin="0" Background="#FF1777B1" Grid.ColumnSpan="2"/>
            <Border BorderBrush="#FFC0D4E4" BorderThickness="1,0,1,1" Margin="0" Grid.Row="1" Background="White" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="#FF1777B1" Margin="0,0,0,4" Grid.ColumnSpan="2">
                <TextBlock x:Name="ResultColumns" FontWeight="Bold" Text="Result Columns" FontSize="24" Foreground="#FF4F4F4F" FontFamily="Segoe UI Light" Margin="15,0,0,0" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
            <eqcontols:ColumnsPanel Query="{Binding Path=Query}" Name="columnsPanel" Margin="15,0,15,15" Style="{StaticResource ColumnsPanelStyle}" Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="2" />
        </Grid>

        <Grid Margin="5" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0" Margin="0" Background="#FF1777B1" Grid.ColumnSpan="2"/>
            <Border Grid.Row="1" BorderThickness="1,0,1,1" BorderBrush="#FFC4D6E5" Background="White" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="#FF1777B1" Margin="0,0,0,4" Grid.ColumnSpan="2">
                <TextBlock x:Name="ColumnsSorting" FontWeight="Bold" Text="Columns Sorting" FontSize="24" FontFamily="Segoe UI Light" Foreground="#FF4F4F4F" Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1"/>
            </Border>

            <eqcontols:SortingPanel Query="{Binding Query}" x:Name="sortingPanel" Margin="15,0,15,15" Style="{StaticResource SortColumnsPanel}" Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        </Grid>
        <Grid Margin="5" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0" Margin="0" Background="#FF1777B1" Grid.ColumnSpan="2"/>
            <Border Grid.Row="1" BorderThickness="1" BorderBrush="#FFC4D6E5" Background="White" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="#FF1777B1" Margin="0,0,0,0" Grid.ColumnSpan="2">
                <TextBlock x:Name="QueryConditions" FontWeight="Bold" Text="Query Conditions" FontFamily="Segoe UI Light" FontSize="24" Foreground="#FF4F4F4F" Margin="15,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Border>
            <eqcontols:QueryPanel Query="{Binding Query}" x:Name="queryPanel" Margin="15,0,15,15" Style="{StaticResource QueryConditionsPanel}" FontFamily="Arial" FontSize="13.333" Grid.Row="2" Grid.ColumnSpan="2"/>
        </Grid>

        <StackPanel Width="Auto" Margin="10" Grid.Row="1" Grid.Column="7" Grid.RowSpan="2">
            <Button Focusable="False" Margin="5" HorizontalAlignment="Right" Width="81" Click="Clear_Click" Content="Clear"/>
            <Button Focusable="False" Margin="5" HorizontalAlignment="Right" Width="81" Click="Save_Click" Content="Save Query"/>
            <Button Focusable="False" Margin="5" HorizontalAlignment="Right" Width="81" Click="Load_Click" Content="Load Query"/>
            <Button x:Name="buttonExecute" Focusable="False" Margin="5,25,5,5" Width="81" Click="Execute_Click" Content="Fetch data" Height="51" IsEnabled="False" />
        </StackPanel>

        <Grid Margin="5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#FFC4D6E5" BorderThickness="1,0,1,1" Margin="0" Grid.Row="1" Background="White" Grid.RowSpan="2"/>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="#FFC4D6E5" Margin="0,0,0,0" Grid.ColumnSpan="2">
                <TextBlock FontWeight="Bold" Text="SQL" FontFamily="Segoe UI Light" FontSize="24" Foreground="#FF4F4F4F" Margin="16,0,1,7" Grid.Row="1"/>
            </Border>
            <TextBox Grid.Row="2" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" 
				Background="White" x:Name="textBoxSql" BorderBrush="{x:Null}" BorderThickness="0" Foreground="#FF4F4F4F" Padding="0" Margin="15,0,15,15" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" TextChanged="TextBoxSql_TextChanged"/>
            <Border BorderThickness="0" Margin="0" Background="#FFA8ABAD"/>
        </Grid>

        <Grid Margin="5" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderThickness="0" Margin="0" Background="#FF237901" Grid.ColumnSpan="2"/>
            <Border BorderBrush="#FFC4D6E5" BorderThickness="1,0,1,1" Margin="0" Grid.Row="1" Background="White" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="#FF237901" Margin="0,0,0,0" Grid.ColumnSpan="2">
                <Grid  Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" x:Name="QueryResult" FontWeight="Bold" Text="Query Result" FontFamily="Segoe UI Light" FontSize="24" Foreground="#FF4F4F4F" Margin="16,0,0,7" />
                    <StackPanel  x:Name="PanelExport" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <Button Focusable="False"  Click="ExportToCsv_Click" Width="107" BorderBrush="{x:Null}" Content="[Export to Csv]" Background="{x:Null}" Foreground="#FF237901" HorizontalAlignment="Right"   FontSize="14"/>
                        <Button Focusable="False"  Click="ExportToExcel_Click" Width="103" BorderBrush="{x:Null}" Content="[Export to Excel]" HorizontalAlignment="Right" Background="{x:Null}" Foreground="#FF237901" FontSize="14"  />
                    </StackPanel>

                </Grid>
            </Border>
            <Button Visibility="Collapsed" Content="Update Result" Grid.Column="1" Margin="40,0,15,0" Grid.Row="1" BorderBrush="{x:Null}" BorderThickness="0" Foreground="#FF237901" FontFamily="Segoe UI" FontSize="14.667" VerticalAlignment="Center" HorizontalAlignment="Right" Background="{x:Null}" Style="{StaticResource UpdateResultButton}" Padding="7,0,0,0" Click="Execute_Click" />
            <ProgressBar VerticalAlignment="Top" Height="15" x:Name="progressBar" Grid.Row="2" IsIndeterminate="True" Visibility="Collapsed" Grid.ColumnSpan="2" Margin="15,15,15,0">
                <ProgressBar.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFAEB7BF" Offset="0"/>
                        <GradientStop Color="#FF647480" Offset="1"/>
                    </LinearGradientBrush>
                </ProgressBar.BorderBrush>
            </ProgressBar>
            <DataGrid Grid.Row="2" AutoGenerateColumns="True" x:Name="datGrid" BorderThickness="0" BorderBrush="{x:Null}" Margin="0" Foreground="#FF4F4F4F" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Auto"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>

</Page>
